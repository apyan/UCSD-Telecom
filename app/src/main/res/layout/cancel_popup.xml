<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_001"
    android:id="@+id/cancel_popup">

    <ScrollView
        android:id="@+id/scrollView_10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <TextView
                android:text="Cancel Service"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="30sp"
                android:textColor="#ff000032"
                android:background="@drawable/screen_title_002"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="@string/cancel_000"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#ff000032"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
            android:text="want to cancel this service?"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="20sp"
            android:textColor="#ff000032"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

            <TextView
                android:text="Terminating this service will"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textColor="#ff000032"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="result in a $150 fee."
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textColor="#ff000032"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellowbutton"
                style="@style/ButtonText"
                android:onClick="onCancelProceedPopup"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="Yes" />

            <Button
                android:id="@+id/button_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellowbutton"
                android:onClick="onCancelBackPopup"
                style="@style/ButtonText"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textSize="25sp"
                android:text="No" />

        </TableRow>
    </LinearLayout>

</LinearLayout>
