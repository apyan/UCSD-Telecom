<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_000"
    android:id="@+id/subscribe_popup">

    <ScrollView
        android:id="@+id/scrollView_10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <TextView
                android:text="@string/subscribe_title"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:textSize="30sp"
                android:textColor="#ff000032"
                android:background="@drawable/screen_title_001"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="@string/subscribe_000"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:textColor="#ff000032"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="@string/subscribe_001"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textColor="#ff000032"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:text="@string/subscribe_002"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textColor="#ff000032"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellowbutton"
                android:onClick="onProceedPopup2"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:textSize="25sp"
                style="@style/ButtonText"
                android:text="@string/subscribe_A" />

            <Button
                android:id="@+id/button_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellowbutton"
                android:onClick="onBackPopup2"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:textSize="25sp"
                style="@style/ButtonText"
                android:text="@string/subscribe_B" />

        </TableRow>
    </LinearLayout>

</LinearLayout>