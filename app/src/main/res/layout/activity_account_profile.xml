<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:orientation="vertical"
    android:background="@drawable/bg_activity_004"
    android:id="@+id/profile_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left|bottom"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/profile_title"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/promp_bar_003"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <TextView
                android:text="@string/profile_001"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/promp_bar_000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Delete Customer Account Button-->
            <!--End of Delete Customer Button-->

            <TextView
                android:id="@+id/usernameDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onChangePassword"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/greenbutton"
                style="@style/ButtonText"
                android:text="@string/profile_password" />

            <Button
                android:id="@+id/button_Delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onDeleteAccount"
                android:layout_marginTop="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/greenbutton"
                style="@style/ButtonText"
                android:text="Delete Account" />
            <!--Customer wants to set threshold-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:orientation="horizontal" >

                <EditText
                    android:hint="Set threshold for bill"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:id="@+id/reg" />
                <Button
                    android:id="@+id/setThreshold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/purplebutton"
                    style="@style/ButtonText"
                    android:text="Set Threshold"
                    android:onClick="setThreshold" />

            </LinearLayout>



            <TextView
                android:text="@string/profile_000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/promp_bar_000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/firstNameDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/middleNameDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lastNameDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addressDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cityDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/stateDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/zipDisplay"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onProfileLogout"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/yellowbutton"
                style="@style/ButtonText"
                android:text="@string/universal_001" />


        </TableRow>
    </LinearLayout>

</LinearLayout>

